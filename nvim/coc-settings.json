{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "rubocop": {
      "command": "rubocop",
      "args": ["--lsp"],
      "filetypes": ["ruby"]
    }
  },
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "css",
    "html",
    "markdown",
    "typescriptreact",
    "typescript",
    "javascriptreact",
    "javascript",
    "json",
    "graphql",
    "php",
    "sh",
    "ruby",
    "cpp"
  ],
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "clangd.fallbackFlags": ["-std=c++20"],
  "diagnostic-languageserver.filetypes": {
    "php": ["phpcs", "phpstan"],
    "sh": "shellcheck",
    "yaml": ["yamllint", "actionlint"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "go": "golint"
  },
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ]
}
